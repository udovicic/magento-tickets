<?xml version="1.0"?>
<config>
    <modules>
        <Inchoo_Tickets>
            <version>0.1.0</version>
        </Inchoo_Tickets>
    </modules>

    <global>
        <!-- Module setup -->
        <resources>
            <inchoo_tickets_setup>
                <setup>
                    <module>Inchoo_Tickets</module>
                    <class>Inchoo_Tickets_Model_Resource_Setup</class>
                </setup>
            </inchoo_tickets_setup>
        </resources>
    </global>

    <frontend>
        <!-- Layout config -->
        <layout>
            <updates>
                <inchoo_tickets>
                    <file>inchoo_tickets.xml</file>
                </inchoo_tickets>
            </updates>
        </layout>

        <!-- Router to Tickets controller -->
        <routers>
            <support>
                <use>standard</use>
                <args>
                    <module>Inchoo_Tickets</module>
                    <frontName>support</frontName>
                </args>
            </support>
        </routers>
    </frontend>
</config>