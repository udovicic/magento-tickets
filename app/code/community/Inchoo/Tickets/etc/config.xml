<?xml version="1.0"?>
<config>
    <modules>
        <Inchoo_Tickets>
            <version>0.1.1</version>
        </Inchoo_Tickets>
    </modules>

    <global>
        <!-- Module setup -->
        <resources>
            <inchoo_tickets_setup>
                <setup>
                    <module>Inchoo_Tickets</module>
                    <class>Inchoo_Tickets_Model_Resource_Setup</class>
                </setup>
            </inchoo_tickets_setup>
        </resources>

        <!-- Models and collection -->
        <models>
            <tickets>
                <class>Inchoo_Tickets_Model</class>
                <resourceModel>tickets_resource</resourceModel>
            </tickets>
            <tickets_resource>
                <class>Inchoo_Tickets_Model_Resource</class>
                <entities>
                    <thread>
                        <table>inchoo_tickets_thread</table>
                    </thread>
                    <post>
                        <table>inchoo_tickets_post</table>
                    </post>
                </entities>
            </tickets_resource>
        </models>

        <!-- Helper -->
        <helpers>
            <inchoo_tickets>
                <class>Inchoo_Tickets_Helper</class>
            </inchoo_tickets>
        </helpers>

        <!-- Admin block -->
        <blocks>
            <inchoo_tickets>
                <class>Inchoo_Tickets_Block</class>
            </inchoo_tickets>
        </blocks>

        <!-- Email templates -->
        <template>
            <email>
                <inchoo_tickets_customer_respond translate="label" module="inchoo_tickets">
                    <label>Support tickets - Customer notifications</label>
                    <file>inchoo_tickets_customer.html</file>
                    <type>html</type>
                </inchoo_tickets_customer_respond>
                <inchoo_tickets_admin_respond translate="label" module="inchoo_tickets">
                    <label>Support tickets - Admin notification on new ticket</label>
                    <file>inchoo_tickets_admin_new.html</file>
                    <type>html</type>
                </inchoo_tickets_admin_respond>
                <inchoo_tickets_admin_new translate="label" module="inchoo_tickets">
                    <label>Support tickets - Admin notification on customer respond</label>
                    <file>inchoo_tickets_admin_respond.html</file>
                    <type>html</type>
                </inchoo_tickets_admin_new>
            </email>
        </template>
    </global>

    <frontend>
        <!-- Layout config -->
        <layout>
            <updates>
                <inchoo_tickets>
                    <file>inchoo_tickets.xml</file>
                </inchoo_tickets>
            </updates>
        </layout>

        <!-- Router to Tickets controller -->
        <routers>
            <support>
                <use>standard</use>
                <args>
                    <module>Inchoo_Tickets</module>
                    <frontName>support</frontName>
                </args>
            </support>
        </routers>
    </frontend>

    <admin>
        <!-- Admin router -->
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Inchoo_Tickets before="Mage_Adminhtml">Inchoo_Tickets_Adminhtml</Inchoo_Tickets>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>